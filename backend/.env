# Database - PostgreSQL (Main Database)
DATABASE_URL="postgresql://airbook_user:airbook_password@localhost:5432/airbook_db?schema=public"

# Database - SQLite (backup/fallback)
# DATABASE_URL="file:./dev.db"

# Redis - Caching & Session Storage
REDIS_URL="redis://:airbook_redis_password@localhost:6379"
REDIS_PASSWORD="airbook_redis_password"

# MongoDB - Logs & Analytics
MONGODB_URL="mongodb://mongo_user:mongo_password@localhost:27017/airbook_logs?authSource=admin"
MONGODB_DATABASE="airbook_logs"

# Elasticsearch - Search Engine
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX="airbook_search"

# MinIO - Object Storage
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin123"
MINIO_BUCKET="airbook-uploads"

# RabbitMQ - Message Queue
RABBITMQ_URL="amqp://rabbit_user:rabbit_password@localhost:5672/airbook"

# Email Service (MailHog for development)
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@airbook.com"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:5173"

# API Keys (External Services)
AVIATION_API_KEY=""
WEATHER_API_KEY=""
CURRENCY_API_KEY=""

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-this"

# Monitoring
PROMETHEUS_METRICS=true
LOG_LEVEL="info"

# External APIs (for airline data)
AVIATIONSTACK_API_KEY=""
OPENSKY_API_URL="https://opensky-network.org/api"