{
  "watch": ["**/*.ts", "**/*.js"],
  "ext": "ts,js,json",
  "ignore": [
    "node_modules/**/*",
    "dist/**/*",
    "prisma/migrations/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "exec": "ts-node server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000",
  "verbose": true
}
